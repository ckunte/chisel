{% from 'site_settings.jinja2' import site_title, site_author, site_url, last -%}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site_title }}</title>
  <link rel="alternate" type="text/html" href="{{ site_url }}"/>
  <link rel="self" type="application/atom+xml" href="{{ site_url }}/rss.xml"/>
  {%- for entry in entries -%}
  {%- if loop.index < last + 1 %}
  <updated>{{ entry.year }}-{{ entry.month }}-{{ entry.day }}T{{ entry.hour }}:{{ entry.minute }}:00Z</updated>
  {%- endif -%}
  {%- endfor %}
  <link href="{{ site_url }}/"/>
  <author>
    <name>{{ site_author }}</name>
  </author>
  <id>{{ site_url }}/rss.xml</id>
  {% for entry in entries %}
  <entry>
    <title>{{ entry.title | e }}</title>
    <link href="{{ site_url }}/{{ entry.url }}"/>
    <id>{{ site_url }}/{{ entry.url }}</id>
    <updated>{{ entry.year }}-{{ entry.month }}-{{ entry.day }}T{{ entry.hour }}:{{ entry.minute }}:00Z</updated>
    <summary>{{ entry.desc | e }}</summary>
  </entry>
  {%- endfor %}

</feed>
